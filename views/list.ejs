<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title></title>
  <link rel="stylesheet" href="css/styles.css">
</head>

<body>

  <div class="box" id="heading">
    <h1><%=kindofDay%></h1>
  </div>


  <div class="box">

    <% add.forEach(function(element){ %>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%=element._id%>" onChange="this.form.submit()">
        <p><%=element.workList%></p>
        <input type="hidden" name="listItem" value="<%= kindofDay %>">
      </div>
    </form>
    <%})%>


    <form class="item" action="/" method="post">
      <input type="text" name="toDo">
      <button type="submit" name="button" value="<%= kindofDay %>">+</button>
    </form>

  </div>




</body>

</html>
